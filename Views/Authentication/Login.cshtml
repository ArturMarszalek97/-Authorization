@model WebApplication2.ViewModels.Authentication.LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body style="background-color:blanchedalmond; font-size:35px; margin-top: 100px" >

    <div>
        <p> @Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
        <p>
            @Html.ValidationMessage("CredentialError")
        </p>
        @using (Html.BeginForm())
    {
        <table align="center" style="margin-right:650px">
            <tr>
                <th style="text-align: right">@Html.DisplayNameFor(m => m.username)</th>
                <td>@Html.EditorFor(m => Model.username)</td>

            </tr>

            <tr>
                <th style="text-align: right">@Html.DisplayNameFor(m => m.password)</th>
                <td>@Html.EditorFor(m => Model.password)</td>

            </tr>
        </table>
        <input align="center" style="margin-left: 700px" type="submit" value="Zatwierdź" />
}
    </div>
    <br /><br />
    <span style="background-color:orange; padding:5px; color:whitesmoke;border:5px solid orange">
        @Html.ActionLink("Stwórz nowego użytkownika", "NewUser")
    </span>
    <br /><br /><br />
    <span style="background-color:orange; padding:5px; color:whitesmoke;border:5px solid orange">
        @Html.ActionLink("Back to List", "Index", "Users")
    </span>
</body>
</html>
